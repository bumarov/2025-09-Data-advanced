<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://customSearchView.title">

    <data>
        <collection id="customersDc" class="com.company.jmixpmdata.entity.Customer">
            <loader id="customersDl" readOnly="true">
                <query>
                    <![CDATA[select e from Customer e]]>
<!--                    <condition>-->
<!--                        <and>-->
<!--                            <c:jpql>-->
<!--                                <c:where>-->
<!--                                    e.firstName like :component_customerFNField-->
<!--                                </c:where>-->
<!--                            </c:jpql>-->
<!--                        </and>-->
<!--                    </condition>-->
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <collection id="ordersDc" class="com.company.jmixpmdata.entity.Order">
            <loader id="ordersDl" readOnly="true">
                <query>
                    <![CDATA[select e from Order_ e where e.customer = :container_customersDc]]>
                </query>
            </loader>
            <fetchPlan extends="_base">
                <property name="customer" fetchPlan="_base"/>
            </fetchPlan>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox id="tablesBox" width="100%" height="100%">
            <vbox height="100%"
                  width="100%"
                  spacing="true">
                <entityComboBox id="customerField"
                                label="Customer"
                                metaClass="Customer"
                                itemsContainer="customersDc"/>
            </vbox>
            <dataGrid id="ordersDataGrid"
                      dataContainer="ordersDc"
                      minHeight="20em"
                      height="100%"
                      width="100%">
                <columns>
                    <column property="orderNumber"/>
                    <column property="customer"/>
                    <column property="date"/>
                </columns>
            </dataGrid>
        </hbox>
    </layout>
</view>