<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://customerSubstringSearchView.title">
    <data>
        <collection id="customersDc" class="com.company.jmixpmdata.entity.Customer">
            <loader id="customersDl" readOnly="true">
                <query>
                    <![CDATA[select e from Customer e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.firstName like :name</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="false">
            <refresh loader="customersDl">
                <onViewEvent type="BeforeShow"/>
                <onComponentValueChanged component="FNField"
                                         param="name"
                                         likeClause="CASE_SENSITIVE"/>
            </refresh>
        </dataLoadCoordinator>
    </facets>
    <layout>
        <textField id="FNField" datatype="string"/>
        <dataGrid id="customersDataGrid" dataContainer="customersDc" width="100%">
            <actions/>
            <columns>
                <column property="firstName"/>
                <column property="lastName"/>
                <column property="email"/>
            </columns>
        </dataGrid>

    </layout>
</view>